%head
  %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
  %meta(charset="UTF-8")

  <!-- SEO stuff -->
  %meta(name="author" content="D. Voiss")
  %meta(name="description" content="An app which pulls an Amazon wishlist, parses it and grabs related ISBNs from Library-Thing, and searches the Chicago Public Library system for them.")
  %meta(name="keywords" content="voiss, chicago, web development, web design, web standards, css, css3, html, html5, xhtml, programming, heroku, ruby, sinatra, library, amazon")
  %meta(name="robots" content="noarchive")

  <!-- possible legacy mobile browsers: -->
  %meta(name="HandheldFriendly" content="True")
  %meta(name="MobileOptimized" content="320")
  <!-- android: target-densitydpi=device-dpi -->
  %meta(name="viewport" content="width=device-width, target-densitydpi=device-dpi, initial-scale=1.0")

  %title= @title
  
  %link(rel="stylesheet" type="text/css" media="all" href="/css/reset.css")
  %link(rel="stylesheet" type="text/css" media="all" href="/css/app.css")

  <!-- IE Fix for HTML5 tags -->
  /[if lt IE 9]
    %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  %script(src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
  
  :javascript
    window.jQuery || document.write('<script src="/js/lib/jquery-1.7.2.min.js"><\/script>')

  <!-- for browsers that don't implement EventSource -->
  :javascript
    window.EventSource || document.write('<script src="/js/lib/eventsource.js"><\/script>')

  %script(src="/js/app.js")

  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-30469374-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

%body

  %header
    %h1
      %a(href="/" id="header-link") Chicago Library Search
    %span An Amazon / Library Thing / CPL Mash-up

  = yield

